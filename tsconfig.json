{
    "compilerOptions": {
        "types": ["node", "mocha", "power-assert", "handlebars", "recursive-readdir", "puppeteer", "mysql", "ioredis", "js-beautify"],
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": false,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "include": [
        "src/**/*.ts",
        "test/**/*.ts"
    ],
    "exclude": [
        "src/*.d.ts"
    ]
}